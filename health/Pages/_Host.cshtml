@page "/"
@namespace health.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="css/site.css" rel="stylesheet" />    
    <link href="health.styles.css" rel="stylesheet" />
    <environment include="Development">
        <link href="/css/main.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="/css/main.min.css" rel="stylesheet" />
    </environment>
    @if (User.Identity.IsAuthenticated)
    {
        <link href="css/dnd.css" rel="stylesheet" />
        <link href="/css/admin.css" rel="stylesheet" />
    }
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Произошла ошибка. Это приложение может больше не отвечать до перезагрузки.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Перезагрузить</a>
        <a class="dismiss">🗙</a>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <script src="_content/Sitko.Blazor.CKEditor/Sitko.Blazor.CKEditor.js"></script>
    }
    <script src="_framework/blazor.server.js"></script>
    <script src="/js/app.js"></script>
    <script src="https://kit.fontawesome.com/247efdb887.js" crossorigin="anonymous"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="/js/admin/admin.js"></script>
    }
</body>
</html>
